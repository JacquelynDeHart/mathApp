<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="#A9C2C8"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mwlogo"
        android:id="@+id/icon_logo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/logo_desc" />
    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/intro"
        android:textSize="36sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/reset_password_intro"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:autofillHints="@string/username"/>

        <EditText
            android:id="@+id/first_pass"
            tools:ignore="AutoFill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reset_password_first"
            android:inputType="textPassword"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/second_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reset_password_verify"
            android:inputType="textPassword"
            tools:ignore="AutoFill"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset"
            android:layout_gravity="end"
            android:background="#B3C8CD"
            android:text="@string/reset_btn"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/returnToLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#B3C8CD"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="@string/reset_return_to_login"
            />
    </LinearLayout>


</LinearLayout>
